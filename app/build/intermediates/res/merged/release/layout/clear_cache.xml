<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:id="@+id/clear_cache_text"
        android:layout_above="@+id/clear_cache_radioGroup"
        android:textColor="#000000"
        android:text="@string/detail_clear_cache"
        />
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/clear_cache_radioGroup"
        android:orientation="horizontal"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/clear_cache_determine"
            android:button="@null"
            android:gravity="center"
            android:text="@string/determine"
            android:textColor="@color/tab_selector_text_color"
            android:layout_weight="1"
            />
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/clear_cache_cancel"
            android:button="@null"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/tab_selector_text_color"
            android:layout_weight="1"
            />
    </RadioGroup>

</RelativeLayout><!-- From: file:/D:/YunZiYuan/app/src/main/res/layout/clear_cache.xml -->